<div class="container-fluid  jumbotron">

  <div class="row">



    <div class="list col-md-4">
        <!--<%= link_to 'Email', new_email_path, remote: true %>-->
        <div class="container-fluid">
          <% @emails.each do |email| %>
            <% if email.opened %>
              <div class="center row email">
            <% else %>
              <div class="center row email unread">
            <% end %>
              <%= link_to "Reçu le: #{email.created_at.strftime("%d-%b-%Y")}", email_path(email), class: "col-md-12"%>
              <%= link_to email.object, email_path(email), class: "col-md-8", remote: true%>
              <div class="col-md-4">
                <%= link_to 'Suppr', email, method: :delete, data: {confirm: 'Sûre ????'}, remote: true, class: 'delete-email' %>
              </div>

            </div>
          <% end %>
        </div>

    </div>

    <div class="content col-md-8">
      <div id="show-email">

      </div>


    </div>
    </div>
</div>
